<endpoint xmlns="http://ws.apache.org/ns/synapse" name="{ep.name}">
	<address uri="{address.uri}">
		<suspendOnFailure>
			<progressionFactor>1.0</progressionFactor>
		</suspendOnFailure>
		<markForSuspension>
			<retriesBeforeSuspension>0</retriesBeforeSuspension>
			<retryDelay>0</retryDelay>
		</markForSuspension>
	</address>
</endpoint>